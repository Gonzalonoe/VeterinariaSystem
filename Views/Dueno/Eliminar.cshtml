@model VeterinariaSystem.Models.Dueno
@{
    ViewData["Title"] = "Eliminar Dueño";
}

<h2>Eliminar Dueño</h2>

<h4>¿Estás seguro que deseas eliminar a este dueño?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">DNI</dt>
        <dd class="col-sm-10">@Model.DNI</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
    </dl>

    <form asp-action="EliminarConfirmado" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
